<div class="form-group {{if (and errors.city visibleErrors.city) 'has-error'}}" id="city">
  <label class="control-label">City</label>
  {{input value=validation-context.city class="form-control" validate-path="city"}}
  {{errors-list errors=errors.city show=visibleErrors.city}}
</div>

<div class="form-group {{if (and errors.street visibleErrors.street) 'has-error'}}" id="street">
  <label class="control-label">Street</label>
  {{input value=validation-context.street class="form-control" validate-path="street"}}
  {{errors-list errors=errors.street show=visibleErrors.street}}
</div>

<div class="form-group {{if (and errors.house visibleErrors.house) 'has-error'}}" id="house">
  <label class="control-label">House number</label>
  {{input value=validation-context.house class="form-control" validate-path="house"}}
  {{errors-list errors=errors.house show=visibleErrors.house}}
</div>
