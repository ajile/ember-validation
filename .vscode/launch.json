{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Ember Server",
      "program": "${workspaceFolder}/node_modules/ember-cli/bin/ember",
      "args": ["server"],
      "runtimeVersion": "8.11.1",
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "env": {
        "NODE_PATH": "${workspaceFolder}",
        "NODE_OPTIONS": "--inspect",
        "DEBUG": "broccoli-persistent-filter:*",
        "LOG_VALIDATION": "true"
      },
      "port": 9229,
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnFirstSessionStart",
    },
    {
      "name": "Ember Client",
      "type": "chrome",
      "request": "launch",
      // "runtimeExecutable": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--enable-logging",
        "--log-level=3"
      ],
      "url": "http://localhost:2000/",
      "sourceMapPathOverrides": {
        "dummy/*": "${workspaceRoot}/tests/dummy/app/*",
        "ember-validation/*": "${workspaceRoot}/addon/*",
        "ember-data/*": "${workspaceRoot}/node_modules/ember-data/addon/*",
        "@ember/*": "${workspaceRoot}/node_modules/ember-source/packages/@ember/*",
      },
      "trace": "verbose",
      "port": 9222
    }
  ],
  "compounds": [
    {
      "name": "Запустить все",
      "configurations": [
        "Ember Server",
        "Ember Client"
      ]
    }
  ]
}
